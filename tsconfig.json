{
  "compilerOptions": {
    "target": "ES2020",
    "lib":[
      "dom",
      "ES2020"
    ],
    "module": "CommonJS",
    "outDir": "dist",
    "sourceMap": true,
    "pretty": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "*" : ["*", "./src/*"],
      "p0x0" : ["./src/p0x0/*"],
      "p0x0res" : ["p0x0res"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests"
  ],
  "compileOnSave": false
}
