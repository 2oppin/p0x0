{
  "compilerOptions": {
    "target": "es6",
    "lib":[
      "es7", "dom"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "pretty": true,
    "inlineSources": true,
    "types": [
      "node"
    ],
    "typeRoots": ["./node_modules/@types"]
  },
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/chai/index.d.ts",
    "./node_modules/@types/chai-as-promised/index.d.ts",
    "./node_modules/@types/chai-http/index.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}