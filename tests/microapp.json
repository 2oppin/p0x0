{
  "output": ".microapp",
  "env": {
    "name": "docker/docker-compose.yml",
    "containers": [{"ID": "android/android-gradle"}]
  },
  "code": {
    "name": "app/src",
    "packages": [
      {
        "name": "main",
        "packages": [
          {
            "name": "java/com/oppin/microapp",
            "entities": ["android/opengl/AndroidOpenGLMainActivity"]
          },
          {
            "name": "res",
            "resources": [
              {
                "name": "mipmap-mdpi/ic_launcher.png",
                "body":  {"RES":  "android/opengl/microapp/res/microapp-res-ic_launcher.png"}
              }
            ]
          }
        ]
      }
    ],
    "entities": [{"name": "Vertex", "platforms": ["sqlite"]}],
    "scripts": [{
      "ID": "android/opengl/microapp/microapp-android-manifest"
    }]
  },
  "sources": [
    {
      "type": "json",
      "dir": "./tests/entities"
    },
    {
      "type": "p0x0",
      "dir": "./tests/entities"
    }
  ],
  "generators": ["ts", "java", "sqlite"]
}
