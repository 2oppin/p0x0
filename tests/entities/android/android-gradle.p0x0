  "name": "gradle",
  "dockerfile": {"ID": "android/android-gradle.dockerfile", "name": "Dockerfile"},
  "volumes": {
    "../app": "/opt/app",
    "./gradle/scripts": "/opt/scripts"
  },
  "scripts": [
    {"ID": "android/android-gradle-wrapper.sh", "name": "scripts/android-gradle-wrapper.sh"},
    {"ID": "hang-container.sh", "name": "scripts/hang-container.sh"}
  ],
  "cmd": "bash -c \" /opt/scripts/android-gradle-wrapper.sh && /opt/scripts/hang-container.sh\""
}
